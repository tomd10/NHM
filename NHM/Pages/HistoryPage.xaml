<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NHM.Pages.HistoryPage"
             Title="Log">
    <ScrollView>
        <VerticalStackLayout>
            <Button 
                x:Name="buttonShow"
                Text="Show current log"
                Clicked="buttonShowClicked"
                Margin="10"/>
            <Button 
                x:Name="buttonLoad"
                Text="Load previous log"
                Clicked="buttonLoadClicked"
                Margin="10"/>
            <Button 
                x:Name="buttonSave"
                Text="Save log to local storage"
                Clicked="buttonSaveClicked"
                Margin="10"/>
            <Button 
                x:Name="buttonEmail"
                Text="Send log via email"
                Clicked="buttonEmailClicked"
                Margin="10"/>
            <Label 
                Text="Log:" 
                FontSize="20"
                Margin="10"/>
            <Label 
                Text=""
                Margin="10"
                x:Name="labelLog"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>